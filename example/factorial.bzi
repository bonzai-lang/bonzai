interface Factorial {
  fn factorial(self: Factorial, n: int)
}

require "natives"

fn Factorial() => {
  mut acc = 1

  actor < Factorial {
    on factorial(self, n) => {
      if n == 0 then {
        print(acc.value)
      } else {
        acc = acc.value * n
        self->factorial(self, n - 1)
      }
    }
  }
}

let f = spawn Factorial()
f->factorial(f, 5)