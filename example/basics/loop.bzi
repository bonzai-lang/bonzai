require "std:datatypes/mutable"
require "std:math"
require "std:io"

interface Loopable {
  fn loop(self: actor Loopable, i: int)
}

fn Loop(msg: string) => actor < Loopable {
  on loop(self, i) => {
    mut j = 0
    while j.value < i {
      j = j.value + 1
    }
    print(msg)
  }
}

let l = spawn Loop("loop")
l->loop(l, 100_000_000)
