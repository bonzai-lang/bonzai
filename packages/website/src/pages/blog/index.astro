---
import { SITE_TITLE, SITE_DESCRIPTION } from '#/consts';
import { getCollection } from 'astro:content';
import Default from '#/layouts/Default.astro';
import Navigation from '#/components/Navigation.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Default title="Blog - Bonzai" description={SITE_DESCRIPTION} class="bg-neutral-900">
  <Navigation />

  <main class="max-w-6xl mx-auto py-32">
    <span class="text-white/50 text-center block uppercase font-mono">
      Bonzai Language
    </span>
    <h2 class="text-4xl text-white text-center my-2">
      Latest articles
    </h2>

    <ul class="flex flex-col gap-2 mt-16">
      {posts.map((post, i) => {
        return <>
          <a href={`/blog/${post.slug}`} class="w-full px-8 pt-8 pb-4 flex items-center max-sm:flex-col max-sm:items-start">
            <div class="flex-auto">
              <h3 class="text-white text-xl font-mono">
                {post.data.title}
              </h3>

              <p class="text-white/50 text-justify">
                {post.data.description}
              </p>
            </div>

            <span class="text-white/50 text-right block">
              {new Date(post.data.pubDate).toLocaleDateString()}
            </span>
          </a>

          {i < posts.length - 1 && <hr class="border-white/10" />}
        </>
      })}
    </ul>
  </main>
</Default>