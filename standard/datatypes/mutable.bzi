require "std:math"
require "std:datatypes/unit"

extern fn mutable_value<A>(x: mutable<A>): A
pub let value = mutable_value

pub fn (+=)<A>(x: mutable<A>, y: A) => {
  x = x.value + y
}

pub fn (-=)<A>(x: mutable<A>, y: A) => {
  x = x.value - y
}

pub fn (*=)<A>(x: mutable<A>, y: A) => {
  x = x.value * y
}

pub fn (/=)<A>(x: mutable<A>, y: A) => {
  x = x.value / y
}

pub fn (%=)<A>(x: mutable<A>, y: A) => {
  x = x.value % y
}
